/* pages/glasses/glasses.wxss */
.glass-banner {
  height: 360rpx;
}

.glass-tit {
  width: 100%;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  line-height: 80rpx;
  margin: 20rpx 0;
  text-decoration: underline;
  text-underline-position: under;
}

.glass-tit-bar {
  width: 90%;
  border-radius: 10rpx;
  font-size: 40rpx;
  font-weight: bold;
  line-height: 80rpx;
  margin: 20rpx auto;
}

.glass-item-img {
  width: 300rpx;
  height: 60rpx;
  display: block;
  margin: 0 auto;
}

.glass-item-img-h {
  width: 300rpx;
  height: 140rpx;
  display: block;
  margin: 0 auto;
}

.glass-item-img-b {
  width: 300rpx;
  height: 100rpx;
  display: block;
  margin: 0 auto;
}

.glass-tit-text {

  line-height: 48rpx;
}